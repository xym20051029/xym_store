{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_EXPORT_COMPILE_COMMANDS:BOOL=TRUE",
                "-GNinja",
                "-Bbuild"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "ninja",
            "args": [
                "-j",
                "20",
                "-C",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Flash(DAP)",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f",
                "interface/cmsis-dap.cfg",
                "-f",
                "target/stm32f4x.cfg",
                "-c",
                "program ./build/vscode_project.elf verify reset exit"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Flash(ST-Link)",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f",
                "interface/stlink.cfg",
                "-f",
                "target/stm32f4x.cfg",
                "-c",
                "program ./build/vscode_project.elf verify reset exit"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Flash(J-Link)",
            "type": "shell",
            "command": "D:/RoboMaster/电控/JLink/JLink.exe",
            "args": [
                "-device",
                "STM32",
                "-if",
                "SWD",
                "-speed",
                "80000",
                "-CommanderScript",
                "./flash.jlink"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
